<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents">

        <item name="android:windowBackground">@drawable/background_gradient</item>

        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        <item name="android:textColorTertiary">@color/textTertiary</item>

        <item name="colorControlNormal">@color/textPrimary</item>
        <item name="colorControlActivated">@color/glowStart</item>
        <item name="colorControlHighlight">@color/glowStart</item>

    </style>
    <style name="AppTheme.Button">
        <item name="android:layout_marginTop">@dimen/buttonMargin</item>
        <item name="android:layout_marginBottom">@dimen/buttonMargin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/minButtonHeight</item>
        <item name="android:enabled">false</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@drawable/button_text_colors</item>
        <item name="android:textSize">@dimen/textH6</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
